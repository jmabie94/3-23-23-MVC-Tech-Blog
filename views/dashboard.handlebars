<div class="container">
    <h1>New Blog Post</h1>
    <form id="new-blogpost">
        {{!-- use bulma styling to make it clear when a field is required --}}
        <input type="text" id="new-title" placeholder="Title">
        <textarea type="text" id="new-description" placeholder="Description"></textarea>
        <h1 id="new-status">
            Fill in all required inputs, no less than 5 characters are allowed.
        </h1>
        <button class="button" id="newpost-submit" type="submit">Post!</button>
    </form>
</div>

<hr id="dashboardHr" />
<h1 id="your-posts">Your Posts</h1>
<div id="dashboard-posts">
    {{#if blogposts}}{{else}}
    <p id="no-posts">You have not yet posted anything!</p>
    {{/if}}

    {{#each blogposts as |blogpost|}}
    <div id="single-post">
        <div id="post-header">
            <h1 id="post-title">{{blogpost.title}}</h1>
            <p id="post-date">{{format_date blogpost.date}}</p>
        </div>
        <p id="post-body">{{blogpost.description}}</p>
        <div id="post-controls" class="buttons">
            <button data-post-id="{{blogpost.postId}}" id="edit-post-{{blogpost.postId}}" class="edit-post-id">Edit Blog Post</button>
            <button data-post-id="{{blogpost.postId}}" id="delete-post-{{blogpost.postId}}" class="delete-post-id">Delete Blog Post</button>
            <button data-post-id="{{blogpost.postId}}" id="view-comments-{{blogpost.postId}}" class="view-comments">View Comments</button>
            {{!-- <button data-post-id="{{blogpost.postId}}" id="confirm-post-{{blogpost.postId}}" class="confirm-post">Confirm</button> --}}
        </div>
    </div>
    {{/each}}
</div>
{{!-- add javascripts here --}}
<script src="/javascript/newpost.js"></script>
<script src="/javascript/editpost.js"></script>
<script src="/javascript/deletepost.js"></script>
<script src="/javascript/viewcomments.js"></script>