{{!-- field to input a title for the blogpost --}}
<div class="field">
    <label class="label">Title</label>
    <div class="control">
        <input 
        class="input" 
        type="text" 
        placeholder="Blog Post Title" 
        id="post-title">
    </div>
</div>

{{!-- field to input the body of the blogpost --}}
<div class="field">
  <label class="label">Content</label>
  <div class="control">
    <textarea 
    class="textarea" 
    placeholder="Write Your Blog Post Here!" 
    id="post-description"></textarea>
  </div>
</div>

{{!-- submit or cancel --}}
<div class="field is-grouped">
  <div class="control">
    <button class="button is-link blogSubmitBtn">Submit</button>
  </div>
  <div class="control">
    <button class="button is-link is-light blogCancelBtn">Cancel</button>
  </div>
</div>